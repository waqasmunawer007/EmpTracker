<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EmpTrack.App">
	<Application.Resources>
		<!-- Application resource dictionary -->
        <ResourceDictionary>

            <x:Double x:Key="HeadingFontSize">16</x:Double>
            <x:Double x:Key="SmallFontSize">12</x:Double>
            <x:Double x:Key="NormalFontSize">14</x:Double>

            <Color x:Key="ButtonTextColor">White</Color>
            <Color x:Key="NormalTextColor">Black</Color>
            <Color x:Key="ApiResponseTextColor">#7E7E7E</Color>
            <Color x:Key="HamburgerBackground">#F5F5F5</Color>
            <Color x:Key="ButtonBackground">#00BF9A</Color>
            <Color x:Key="TabBarBackground">#FAFAFA</Color>
            <Color x:Key="NavBarBackground">#00AA8D</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource NavBarBackground}"/>
                <Setter Property="BarTextColor" Value="Color.White"/>
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackground}" />
                <Setter Property="TextColor" Value="{StaticResource ButtonTextColor}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
